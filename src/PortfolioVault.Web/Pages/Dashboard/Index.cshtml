@page
@model PortfolioVault.Web.Pages.DashboardModel

<h2>Portfolio Dashboard</h2>

<p>Net Worth (USD): @Model.NetWorth.ToString("F2")</p>
<p>Cash: @Model.Cash.ToString("F2")</p>
<p>Securities: @Model.Securities.ToString("F2")</p>
<p>Property: @Model.Property.ToString("F2")</p>

<hr />

<h4>Net Worth Breakdown</h4>
<canvas id="netWorthChart" width="400" height="200"></canvas>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        (function () {
            var ctx = document.getElementById('netWorthChart').getContext('2d');
            var chart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Cash', 'Securities', 'Property'],
                    datasets: [{
                        data: [@Model.Cash, @Model.Securities, @Model.Property],
                        backgroundColor: ['#4e79a7', '#f28e2b', '#e15759']
                    }]
                },
                options: {
                    responsive: true
                }
            });
        })();
    </script>
}
